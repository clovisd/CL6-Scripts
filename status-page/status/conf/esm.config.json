{
    "esm": {
        "version": "2.5",
        "website": "http://www.ezservermonitor.com",
        "check_updates": false,
        "auto_refresh": 30,
        "theme": "red",
        "custom_title": "CL6 Server Status"
    },
    "cpu": {
        "enable_temperature": false
    },
    "disk": {
        "show_tmpfs": false,
        "show_filesystem": true
    },
    "ping": {
        "hosts": [
            "cl6.us",
            "cl6web.com",
            "bing.com",
            "google.com"
        ]
    },
    "last_login": {
        "enable": true,
        "max": 5
    },
    "services": {
        "show_port": true,
        "list": [
            {
                "name": "Web Server (Standard)",
                "host": "localhost",
                "port": 80,
                "protocol": "tcp"
            },
            {
                "name": "Web Server (SSL)",
                "host": "localhost",
                "port": 443,
                "protocol": "tcp"
            },
            {
                "name": "Database Server",
                "host": "localhost",
                "port": 3306,
                "protocol": "tcp"
            },
            {
                "name": "SSH",
                "host": "localhost",
                "port": 42806,
                "protocol": "tcp"
            }
        ]
    }
}
